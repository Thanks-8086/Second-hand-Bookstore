@import "../../templates/nodata.wxss";

page {
  background-color: #efefef;
}

/* 搜索框 */

.container {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
}

.search_area {
  background-color: #e6e6e657;
  width: 70%;
  height: 60rpx;
  display: flex;
  border: 1px solid #aaa;
  border-radius: 20rpx;
  align-items: center;
  position: relative; /*父元素位置要设置为相对*/
  left: 20rpx;
  margin-right: 10rpx;
}

.search_input {
  margin-left: 20rpx;
  font-size: 25rpx;
}

.search_area icon {
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 10rpx; /* 靠右调节 */
}

.searchbutton {
  background-color: #27c18f;
  width: 100rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: white;
}

/* 标签布局 */

.nav {
  white-space: nowrap;
  background-color: white;
}

.cu {
  padding: 15rpx 100rpx;
  font-size: 25rpx;
  color: #3f3f3f;
  display: inline-block;
}

.cu.active {
  border-bottom: 4rpx#ffba40 solid;
  color: #ffba40;
}

/* 热门标签布局 */

.hotTag {
  white-space: nowrap;
  padding: 10rpx 20rpx;
  background-color: white;
}

.hotcheck {
  margin: 8rpx 10rpx;
  padding: 5rpx 8rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  border: 1rpx #aaa solid;
  color: #aaa;
  display: inline-block;
}

.hotcheck.active {
  border: 1rpx #1296db solid;
  background-color: #1296db;
  color: white;
}

/* 标签布局 */
.labelTag {
  white-space: nowrap;
  padding: 10rpx 20rpx;
  background-color: white;
}

.labelcheck {
  margin: 8rpx 10rpx;
