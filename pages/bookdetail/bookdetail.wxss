@import "../../templates/nodata.wxss";

image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

text {
  margin: 0 10rpx;
}

.container {
  height: 650rpx;
  padding: 20rpx 0;
  color: #3f3f3f;
  font-size: 30rpx;
  position: relative;
  z-index: 1;
}

.userinfo {
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  border-bottom: 4rpx #efefef solid;
}

.touxiang {
  height: 100rpx;
  width: 100rpx;
  background-color: white;
  margin-left: 80rpx;
  margin-right: 30rpx;
}

.fenxiang {
  height: 50rpx;
  width: 50rpx;
  margin-left: 130rpx;
  padding: 50rpx 0 0 50rpx;
}

.name {
  margin: 10rpx 0;
}

.labellist {
  margin: 15rpx 0;
}

/* 点赞收藏等 */

.labellist image {
  width: 20rpx;
  height: 20rpx;
  margin: 0 5rpx;
}

.labellist text {
  font-size: 23rpx;
  color: #5c5c5c;
  margin-right: 5rpx;
}

.book-detail {
  width: 82%;
  padding: 20rpx 9%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  border-bottom: 4rpx #efefef solid;
}

.xiang {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 5rpx 0;
}

.content {
  padding: 10rpx 0;
}

.textarea {
  margin: 10rpx 0 20rpx;
  padding: 15rpx;
  border: 1rpx #666 solid;
  border-radius: 20rpx;
}

.jieshao {
  overflow-y: hidden;
  word-break: break-all;
  word-wrap: break-word;
}

.imgRoot {
  margin: 10rpx 0;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.imgList {
  display: inline-block;
}

.img {
  margin: 15rpx 22rpx;
  width: 160rpx;
  height: 160rpx;
}

/* 点赞收藏想要区 */
.xiang1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5rpx 400rpx;
}
.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
}

.item image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

.item text {
  font-size: 20rpx;
  margin: 5rpx 0;
  color: rgba(102, 102, 102, 0.863);
}

/* 评论区 */

.comments {
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  justify-content: flex-start;
  align-content: center;
  flex-direction: column;
}

/* 全部留言 */

.commentTitle {
  height: 50rpx;
  margin: 10rpx 50rpx;
  border-bottom: 3rpx #efefef solid;
}

.commentTitle image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 评论显示区 */

.commentshow {
  padding: 10rpx 50rpx;
  margin-bottom: 100rpx;
}

/* 条评论 */

.commentitem {
  border-bottom: 2rpx #efefef solid;
  display: flex;
  direction: row;
  align-items: flex-start;
  padding: 10rpx 0 25rpx;
  }

.commentHead {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.content {
  padding-left: 25rpx;
}

.commentname {
  color: #00415acc;
}
.commentButtom {
  font-size: 25rpx;
  color: #666;
  display: flex;
  direction: row;
  align-content: center;
}
.commentButtom1 {
  font-size: 25rpx;
  color: #666;
  display: flex;
  direction: row;
  align-content: center;
  position: absolute;
  right: 20rpx;
}

/* 子评论 */

.child {
  display: flex;
  direction: row;
  align-content: center;
  font-size: 20rpx;
  margin-bottom: 5rpx;
}

.childname {
  color: #00415acc;
}
.aaa{
  margin-left: 15rpx;
}
/* 评论框排版 */

.comment-box {
  position: fixed;
  bottom: 0;
  box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
  z-index: 2;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx;
  background-color: white;
}
.comment-box image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.comment-box input {
  font-size: 28rpx;
  margin: 15rpx 0;
  padding: 0 10rpx;
  height: 70rpx;
  width: 60%;
  border: 1rpx #666 solid;
  border-radius: 20rpx;
}

.but {
  position: absolute;
  right: 10rpx;
  background-color: #27c18f;
  color: white;
}
.but[size]{
  width: 150rpx;
}
